<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/login_CV_headerCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/template_header"
            app:cardBackgroundColor="@color/blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/inventory_list_TV_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/category_name"
                android:textSize="@dimen/startingPage_tittle_size"
                android:textColor="@color/black"
                android:layout_margin="@dimen/default_margin_16"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_background"
                android:layout_gravity="end"
                android:layout_margin="@dimen/default_margin_16"/>


        </com.google.android.material.card.MaterialCardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/inventory_list_LLC_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/default_margin_16"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_CV_headerCard">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/inventory_list_TV_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="start"
                android:padding="@dimen/default_padding_8"
                android:clickable="true"
                android:text="@string/show_all"
                android:textColor="@color/black"
                android:textSize="@dimen/btn_txt_size"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/inventory_list_TV_categories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="end"
                android:padding="@dimen/default_padding_8"
                android:clickable="true"
                android:text="@string/for_categories"
                android:textColor="@color/black"
                android:textSize="@dimen/btn_txt_size"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/inventory_list_RV_products"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/default_margin_16"
            android:layout_marginEnd="@dimen/default_margin_16"
            android:layout_marginStart="@dimen/default_margin_16"
            android:layout_marginTop="@dimen/default_margin_8"
            tools:listitem="@layout/item_product"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inventory_list_LLC_filters"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>